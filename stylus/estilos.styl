@import "normalize.styl"
@import "fonts.styl"
azul = #193044
plomo = #b5bcc4
amarillo = #f4d03f
plomo_oscuro = #6c7a89
html
body
    width 100%
    height 100%
    font-size 100%
    font-family 'Cantarell', sans-serif

figure
h1
h3
ul
    margin 0px
    padding 0px
    vertical-align top
.header
    position fixed
    z-index 301
    margin 0px
    background-color white
    width 100%
.logo
    position absolute
    left .3em
    top .5em
    display none
    img
        width 64px
#toggle-menu
    display block
    width 3em
    height 3em
    background rgba(white,.8)
    box-shadow 0px 0px 3px 3px azul
    position fixed
    margin-top 1em
    z-index 300
    span::after
    span::before
        content ''
        position absolute
        top -10px
        left 0
    span::after
        top 10px
    span
        display block
        position relative
        top 50%
        margin 0px auto
        margin-top -4px

    span
    span::after
    span::before
        width 2em
        height .4em
        background azul
        border-radius 3px
        transition: all 0.3s;
#toggle-menu.active
    span
        background-color transparent
        &::before
            transform translate(0em,.6em) rotate(45deg)
        &::after
            transform translate(0em,-.6em) rotate(-45deg)

#navegacion
    width 10em
    position fixed
    left -10em
    top 4em
    z-index 299
    opacity 1
.navegacion__lista
    list-style none
.navegacion__item
    a
        display block
        position relative
        background-color rgba(white,0.6)
        text-decoration none
        padding .6em 1em .6em 2em
        color azul
        transition all .5s
        &:hover
            background-color azul
            color white
            span
                color white

    span
        position absolute
        top 50%
        margin-top -.5em
        left .5em
        color azul
        font-size 1rem

.presentacion
    display table
    box-sizing border-box
    position relative
    width 100%
    height 100%
    background-image url('../img/fondo.jpg')
    background-size cover
    background-position center
.presentacion-contenedor
    display table-cell
    text-align center
    vertical-align middle
.presentacion__foto
    text-align center
    img
        width 9.375em
        height 9.375em
.presentacion hr
    display block
    margin 0px
    width 16em
    border 2px solid white
    margin 0 auto
.presentacion__nombre
.presentacion__profesion
    color white
    text-shadow .1em .1em .2em black
    text-align center
.presentacion__nombre::before
.presentacion__profesion::before
    content: "<"

.presentacion__nombre::after
.presentacion__profesion::after
        content: "/>"

.presentacion__redesSociales
    margin-top 1em
    text-align center

.redesSociales__item
    text-decoration none
    display inline-block
    color azul
    padding 1em 1.5em
    background-color white
    position relative
    span
        position absolute
        top .2em
        left .45em
        font-size 1.5em
.redesSociales__item::before
.redesSociales__item::after
    content ""
    position absolute
    border-left 1.5em solid transparent
    border-right 1.5em solid transparent

.redesSociales__item::before
    border-bottom .8em solid white
    top -.75em
    left 0
.redesSociales__item::after
    border-top .8em solid white
    bottom -.75em
    left 0

/*============== SOBRE MI ==============*/

.sobreMi
.portafolio
.contacto
    width 100%
    display flex
    flex-wrap wrap
    flex-direction row
.sobreMi
.portafolio
    justify-content space-around
.sobreMi__titulo
.portafolio__titulo
.contacto__titulo
    display block
    text-align center
    color white
    background-color azul
    padding .5em 0em
    width 100%
.sobreMi__informacion
    text-align center
    padding 5em 1.5em 0em 1.5em
    margin-top 7em
    background-color plomo
    max-width 20em
    border-radius 1em
    position relative
.sobreMi__informacion:last-child
    margin-bottom 3em
.informacion__icon
    position absolute
    top -75px
    left 50%
    margin-left -75px
    width 150px
    height 150px
    overflow hidden
    border-radius 50%
    img
        width 150px
        height 150px
.informacion__icon--desarrollador
    background-color #59abe3
.informacion__icon--disenador
    background-color #f4d03f
.informacion__icon--gamer
    background-color #36d7b7

.portafolio
    background-color azul
.portafolio__titulo
    background-color white
    border-top 1px solid azul
    color azul
.portafolio__items
    width 10em
    height 10em
    background-color white
    margin 1em 0em
.contacto
    background-color plomo_oscuro
.contacto__titulo
    background-color amarillo
    color azul
.contacto__saludo
    padding 1em 1em
    text-align center
    font-size 1.5rem
    color white
.contacto__saludo--email
.contacto__saludo--telefono
    margin 1em 0em
    display block
    color amarillo
    font-weight bold
    font-size 1.2rem
.formulario__box
    display block
    border-radius .8em
    padding .8em 1em
    border none
    margin .8em auto
    width 18em
.formulario__boton
    display block
    margin 0px auto
    text-transform uppercase
    padding 1em 2em
    background-color #f1fd2c
    border none
    border-radius 5px
    box-shadow 0px 4px amarillo
    margin-bottom 2em
.footer
    position relative
    background-color azul
    padding 1.5em 0em
.footer__author
    color white
    margin 0px
    margin-left 1em
    text-align left
    a
        text-decoration none
        color amarillo

.scrollTop
    position absolute
    right 1em
    bottom .7em
    width 3em
    height 3em
    background-color transparent
    border-radius 50%
    box-shadow 0px 0px 3px 3px white
    transition all .5s
    &:hover
        background-color white
        .scrollTop--linea1
        .scrollTop--linea2
        .scrollTop--linea3
            background-color azul
    .scrollTop__flecha
        position relative
    .scrollTop--linea1
    .scrollTop--linea2
    .scrollTop--linea3
        position absolute
        width .5em
        left 50%
        margin-left -.25em
        background-color white
        border-radius 5px
    .scrollTop--linea1
        top .25em
        height 2.5em
    .scrollTop--linea2
    .scrollTop--linea3
        top .2em
        height 1.5em
    .scrollTop--linea2
        transform translate(-.4em,0em) rotate(35deg)
    .scrollTop--linea3
        transform translate(.4em,0em) rotate(-35deg)

@media screen and (min-width: 460px)
    .presentacion-contenedor
        font-size 1.5rem

@media screen and (min-width: 1024px)
    .header
        box-sizing border-box
        height 5em
    .logo
        display block
    #toggle-menu
        display none
    #navegacion
        background-color white
        width 62.5em
        position static
        display block
        margin 0px auto
        text-align center

    .navegacion__item
        display inline-block
        a
            padding 1.78em 2em 1.78em 2em
    .sobreMi__informacion
        margin-bottom 3em
    .portafolio__items
        width 15em
        height 15em
    .contacto
        justify-content center
    .contacto__saludo
    .contacto__formulario
        box-sizing border-box
        width 30rem
    .footer__author
        text-align center
